{
  "font_family": {
    "primary": "'Inter', sans-serif",
    "secondary": "'Merriweather', serif"
  },
  "base_size_px": 16,
  "scale_ratio": 1.25,
  "headings": {
    "h1": {
      "font_size": "2.5rem",
      "font_weight": 700,
      "line_height": 1.2,
      "font_family": "primary"
    },
    "h2": {
      "font_size": "2rem",
      "font_weight": 700,
      "line_height": 1.25,
      "font_family": "primary"
    },
    "h3": {
      "font_size": "1.75rem",
      "font_weight": 600,
      "line_height": 1.3,
      "font_family": "primary"
    },
    "h4": {
      "font_size": "1.5rem",
      "font_weight": 600,
      "line_height": 1.35,
      "font_family": "primary"
    },
    "h5": {
      "font_size": "1.25rem",
      "font_weight": 500,
      "line_height": 1.4,
      "font_family": "primary"
    },
    "h6": {
      "font_size": "1rem",
      "font_weight": 500,
      "line_height": 1.45,
      "font_family": "primary"
    }
  },
  "body": {
    "font_size": "1rem",
    "font_weight": 400,
    "line_height": 1.6,
    "font_family": "primary"
  },
  "links": {
    "font_weight": 500,
    "text_decoration": "none",
    "hover_decoration": "underline"
  },
  "code": {
    "font_family": "'Courier New', Courier, monospace",
    "background_color": "#e9ecef",
    "padding": "0.2em 0.4em",
    "border_radius": "0.25rem"
  },
  "accessibility": {
    "contrast_ratio": {
      "min_wcag_aa": 4.5,
      "min_wcag_aaa": 7
    }
  }
}